# ============================================
# AI Logo Maker - Environment Variables
# ============================================

# --------------------------------------------
# AI Services
# --------------------------------------------
# Google Gemini API Key - Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Replicate API Token - Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_YOUR_REPLICATE_TOKEN_HERE

# FreeConvert API Key - Get from: https://www.freeconvert.com/api
FREECONVERT_API_KEY=api_production_YOUR_FREECONVERT_KEY_HERE

# --------------------------------------------
# Authentication (Clerk)
# --------------------------------------------
# Get from: https://dashboard.clerk.com
# Client-side (public)
VITE_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_CLERK_PUBLISHABLE_KEY

# Server-side (secret)
CLERK_SECRET_KEY=sk_live_YOUR_CLERK_SECRET_KEY

# --------------------------------------------
# Payments (Stripe)
# --------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
# Server-side secret key
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY

# Client-side publishable key (used by frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# Webhook secrets - Get from Stripe CLI or dashboard
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_WEBHOOK_SECRET_PRODUCTION=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET

# --------------------------------------------
# Database (Neon/Vercel Postgres)
# --------------------------------------------
# Get from: https://neon.tech or Vercel dashboard
POSTGRES_URL=postgresql://user:password@host.neon.tech/db?sslmode=require
POSTGRES_URL_NO_SSL=postgresql://user:password@host.neon.tech/db
POSTGRES_URL_NON_POOLING=postgresql://user:password@host-pooler.neon.tech/db?sslmode=require
DATABASE_URL=postgresql://user:password@host.neon.tech/db?sslmode=require

# Individual connection params (alternative to URL)
PGHOST=your-db-host.neon.tech
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=your_db_name

# --------------------------------------------
# Storage (Vercel Blob)
# --------------------------------------------
# Get from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_YOUR_TOKEN_HERE

# --------------------------------------------
# Email (Resend)
# --------------------------------------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_YOUR_RESEND_API_KEY

# --------------------------------------------
# CORS Configuration (optional)
# --------------------------------------------
# Comma-separated list of allowed origins for API
CORS_ORIGINS=https://craftyourlogo.com,https://www.craftyourlogo.com

# --------------------------------------------
# Analytics (optional)
# --------------------------------------------
# Google Analytics 4 Measurement ID
GA_MEASUREMENT_ID=G-YOUR_GA_ID

# Google Ads Conversion ID  
ADS_CONVERSION_ID=AW-YOUR_ADS_ID

# --------------------------------------------
# Deployment
# --------------------------------------------
# Set to 'true' when deployed to Vercel (affects file paths)
VERCEL=true

# Optional: Custom port for local development
PORT=3001
