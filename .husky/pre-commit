#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Prevent deployment nightmares by validating configuration before commit
echo "ğŸ” Running deployment validation..."

# Check if vercel.json or package.json changed
if git diff --cached --name-only | grep -E "(vercel\.json|package\.json)"; then
    echo "âš ï¸  Critical deployment files changed - running validation..."
    node scripts/validate-deployment.cjs
    
    if [ $? -ne 0 ]; then
        echo "ğŸ›‘ COMMIT BLOCKED: Deployment validation failed!"
        echo "Fix the issues above before committing."
        exit 1
    fi
    
    echo "âœ… Deployment validation passed"
fi

echo "âœ… Pre-commit checks complete"